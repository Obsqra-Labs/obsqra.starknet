# Example Nginx config for zkde.fi (zkde.fi by Obsqra Labs)
# Place in /etc/nginx/sites-available/ or include in main config.
# Serves the app at zkde.fi (root).

# zkde.fi frontend - Next.js on port 3001
location / {
    proxy_pass http://127.0.0.1:3001;
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection 'upgrade';
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_cache_bypass $http_upgrade;
}

# zkde.fi backend API - FastAPI on port 8003
location /api/v1/zkdefi {
    proxy_pass http://127.0.0.1:8003;
    proxy_http_version 1.1;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
}

# Reload Nginx after editing: sudo nginx -t && sudo systemctl reload nginx
